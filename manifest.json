{
  "manifest_version": 3,
  "name": "Equality Compass",
  "version": "0.20.2",
  "description": "Highlight states on LinkedIn and Indeed job listings with M.A.P. Total Policy Tally or Gender Identity scoring.",
  "icons": {
	  "96": "icons/icon96.png",
	  "48": "icons/icon48.png"
  },
  "background": {
	"scripts": [
		"background.js"
	]
  },
  "content_scripts": [
    {
      "matches": [
		"*://*.linkedin.com/jobs*",
		"*://*.indeed.com/*",
		"*://*.ziprecruiter.com/*"
	  ],
      "js": [
		"stateScores.js",
		"content.js"
	  ],
      "run_at": "document_idle"
    }
  ],
  "action": {
	"default_title": "Equality Compass",
    "default_popup": "browserAction/popup.html",
    "default_icon": {
      "96": "icons/icon96.png"
    }
  },
  "permissions": ["storage", "tabs"],
  "host_permissions": [
	"*://*.linkedin.com/*",
	"*://*.indeed.com/*",
	"*://*.ziprecruiter.com/*"
  ]
}