{
  "manifest_version": 3,
  "name": "Equality Compass",
  "version": "0.19.1",
  "description": "Highlight states on LinkedIn and Indeed job listings with M.A.P. Total Policy Tally or Gender Identity scoring.",
  "permissions": ["storage", "tabs"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "96": "icon96.png",
	  "48": "icon48.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*.linkedin.com/jobs*", "*://*.indeed.com/*", "*://*.ziprecruiter.com/*"],
      "js": ["stateScores.js", "content.js"],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": [
	"*://*.linkedin.com/*",
	"*://*.indeed.com/*",
	"*://*.ziprecruiter.com/*"
  ],
  "background": {
	"scripts": ["background.js"]
  }
}