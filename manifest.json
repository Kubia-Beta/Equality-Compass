{
  "manifest_version": 3,
  "name": "Equality Compass",
  "version": "2.0.0",
  "description": "Highlight states on LinkedIn job listings with Primary or Secondary scoring.",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*.linkedin.com/jobs*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
