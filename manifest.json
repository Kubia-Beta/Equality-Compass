{
  "manifest_version": 3,
  "name": "Equality Compass",
  "version": "2.0.1",
  "description": "Highlight states on LinkedIn and Indeed job listings with M.A.P. Total Policy Tally or Gender Identity scoring.",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*.linkedin.com/jobs*", "*://*.indeed.com"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
